{
  "name": "lyte-shell",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "serve-static": "cd dist && ws --spa index.html -z",
    "build": "vue-cli-service build",
    "build-storybook": "run-s storybook:build storybook:copyres",
    "storybook": "run-s storybook:tailwind storybook:serve",
    "storybook:build": "build-storybook -c .storybook -o dist/storybook",
    "storybook:serve": "start-storybook -s ./public -p 8000",
    "storybook:copyres": "ncp ./public/images dist/storybook/images",
    "storybook:tailwind": "npx tailwindcss build src/theme/tailwind.css -o .storybook/tailwind.css",
    "lint": "npx tslint -p .",
    "lint:fix": "npx tslint --fix -p .",
    "docker": "docker run -it -p 8000:8000 -v $(pwd):/app -w /app --rm node bash -c \"npm run storybook\"",
    "test:e2e": "cypress open",
    "test:unit": "vue-cli-service test:unit"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "buefy": "^0.9.4",
    "core-js": "^2.6.11",
    "favicons": "^6.2.0",
    "js-beautify": "^1.13.0",
    "log-symbols": "^4.0.0",
    "register-service-worker": "^1.5.2",
    "vue": "^2.5.22",
    "vue-i18n": "^8.22.4",
    "vue-property-decorator": "^7.0.0",
    "vue-router": "^3.0.1",
    "vuex": "^3.0.1",
    "vuex-module-decorators": "^0.10.1"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.34",
    "@fortawesome/free-solid-svg-icons": "^5.15.2",
    "@fortawesome/vue-fontawesome": "^2.0.2",
    "@storybook/addon-links": "^5.3.21",
    "@storybook/addon-options": "^5.3.21",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/preset-typescript": "^2.1.0",
    "@storybook/vue": "^5.3.21",
    "@types/chai": "^4.2.11",
    "@types/favicons": "^5.5.0",
    "@types/jest": "^23.1.4",
    "@types/jquery": "^3.3.30",
    "@types/mocha": "^5.2.7",
    "@types/node": "^10.14.8",
    "@types/storybook__vue": "^5.2.1",
    "@vue/cli-plugin-babel": "^3.4.0",
    "@vue/cli-plugin-typescript": "^3.4.0",
    "@vue/cli-plugin-unit-jest": "^4.3.1",
    "@vue/cli-service": "^4.3.1",
    "@vue/test-utils": "^1.0.2",
    "autoprefixer": "^9.7.6",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^26.0.1",
    "babel-preset-vue": "^2.0.2",
    "chai": "^4.2.0",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-webpack-plugin": "^2.4.2",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.5",
    "rdvue": "^0.5.6",
    "sass-loader": "^7.1.0",
    "tailwindcss": "^1.4.1",
    "typescript": "^3.0.0",
    "vue-cli-plugin-i18n": "^1.0.1",
    "vue-template-compiler": "^2.5.21",
    "webpack-bundle-analyzer": "^3.7.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.vue$": "vue-jest",
      ".+\\.(css|styl|less|sass|scss|svg|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "snapshotSerializers": [
      "jest-serializer-vue"
    ],
    "testMatch": [
      "**/*.spec.(js|jsx|ts|tsx)|**/__tests__/*.(js|jsx|ts|tsx)"
    ],
    "testPathIgnorePatterns": [
      "/cypress/",
      "/node_modules/"
    ],
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "testURL": "http://localhost:8080",
    "globals": {
      "ts-jest": {
        "babelConfig": true
      }
    }
  }
}
